<%= form_for(@article) do |t| %>
  <div class="form-group">
    <%= t.label :title, "Title", class: "control-label" %>
    <%= t.text_field :title, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= t.label :content, "Content", class: "control-label" %>
  <div id="editor"></div>
    <%= t.text_area(:content, size: '50x10', class: "form-control") %>
  </div>

  <%= t.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>

