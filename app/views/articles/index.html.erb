<div class="wrapper">
  <% @articles.each do |article| %>
    <h2 class="h2-title text-center"><%= link_to article.title, article_path(article) %></h2>
    <p class="p-content-extract text-center"> <%= article.content[0..100] %>...</p>
    <p class="text-center"><%= link_to "Modify this article", edit_article_path(article) %></p>
    <%= link_to "Delete this article", article_path(article), method: :delete, class: "btn btn-danger text-center" %>
  <% end %>
</div>
